---
import type { Game } from '../models/game';

export interface Props {
  game: Game;
}

const { game } = Astro.props;
---

<a href={`/games/${game.id}`} class="game-card">
  <div class="game-cover">
    {game.cover && <img src={game.cover} alt="cover" />}
  </div>

  <div class="game-title">{game.name}</div>
</a>

<style>
  .game-card {
    display: block;
    position: relative;
  }

  .game-cover {
    width: 130px;
    height: 185px;
    background: #9e9e9e;
  }

  .game-title {
    position: absolute;
    background: rgba(38, 42, 44, 0.75);
    color: #fff;
    bottom: 0;
    width: 100%;
    text-align: center;
    padding: 0.5em;
    font-size: 0.8rem;
    text-decoration: none;
  }
</style>
